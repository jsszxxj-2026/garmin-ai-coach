/**
 * 图表组件示例
 * 使用 Recharts 展示跑步数据
 */

import {
  LineChart,
  Line,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  Legend,
  ResponsiveContainer,
} from 'recharts'

interface ChartData {
  labels: string[]
  paces: number[]
  heart_rates: number[]
  cadences: number[]
}

interface ChartViewProps {
  data: ChartData
}

export function ChartView({ data }: ChartViewProps) {
  // 转换数据格式
  const chartData = data.labels.map((label, index) => ({
    label,
    pace: data.paces[index] || 0,
    heartRate: data.heart_rates[index] || 0,
    cadence: data.cadences[index] || 0,
  }))

  return (
    <div className="space-y-6">
      {/* 配速和心率图表 */}
      <div>
        <h3 className="text-lg font-semibold mb-4">配速与心率</h3>
        <ResponsiveContainer width="100%" height={300}>
          <LineChart data={chartData}>
            <CartesianGrid strokeDasharray="3 3" />
            <XAxis dataKey="label" />
            <YAxis yAxisId="left" label={{ value: '配速 (秒/km)', angle: -90, position: 'insideLeft' }} />
            <YAxis yAxisId="right" orientation="right" label={{ value: '心率 (bpm)', angle: 90, position: 'insideRight' }} />
            <Tooltip />
            <Legend />
            <Line
              yAxisId="left"
              type="monotone"
              dataKey="pace"
              stroke="#8884d8"
              name="配速 (秒/km)"
              strokeWidth={2}
            />
            <Line
              yAxisId="right"
              type="monotone"
              dataKey="heartRate"
              stroke="#82ca9d"
              name="心率 (bpm)"
              strokeWidth={2}
            />
          </LineChart>
        </ResponsiveContainer>
      </div>

      {/* 步频图表 */}
      <div>
        <h3 className="text-lg font-semibold mb-4">步频</h3>
        <ResponsiveContainer width="100%" height={250}>
          <LineChart data={chartData}>
            <CartesianGrid strokeDasharray="3 3" />
            <XAxis dataKey="label" />
            <YAxis label={{ value: '步频 (步/分)', angle: -90, position: 'insideLeft' }} />
            <Tooltip />
            <Legend />
            <Line
              type="monotone"
              dataKey="cadence"
              stroke="#ffc658"
              name="步频 (步/分)"
              strokeWidth={2}
            />
          </LineChart>
        </ResponsiveContainer>
      </div>
    </div>
  )
}
